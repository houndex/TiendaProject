<% if !@user.errors.empty? %>
	<ol>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ol>
<% end %>

<%= form_for @user do |f| %>
	<%= f.label 'Name' %>
	<%= f.text_field :name %>
	<%= f.label 'Email' %>
	<%= f.text_field :email %>
	<%= f.label 'Password' %>
	<%= f.password_field :password %>
	<%= f.label 'Avatar' %>
	<%= f.file_field :avatar %>
	<%= f.submit %>

<% end %>